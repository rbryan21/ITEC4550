<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.ggc.bryan.hbuilding.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/mainPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/mainPageTitle"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

        <ImageView
            android:id="@+id/healthScienceBuildingImage"
            android:layout_width="346dp"
            android:layout_height="234dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainPageTitle"
            app:layout_constraintVertical_bias="0.029"
            app:srcCompat="@drawable/healthsciencebuilding" />

        <Button
            android:id="@+id/firstFloorButton"
            android:layout_width="149dp"
            android:layout_height="37dp"
            android:layout_marginTop="16dp"
            android:text="@string/firstFloorButtonText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/healthScienceBuildingImage" />

        <Button
            android:id="@+id/secondFloorButton"
            android:layout_width="149dp"
            android:layout_height="37dp"
            android:layout_marginTop="8dp"
            android:text="@string/secondFloorButtonText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/firstFloorButton" />

        <Button
            android:id="@+id/thirdFloorButton"
            android:layout_width="149dp"
            android:layout_height="37dp"
            android:layout_marginTop="8dp"
            android:text="@string/thirdFloorButtonText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/secondFloorButton" />

        <Button
            android:id="@+id/campusMapButton"
            android:layout_width="149dp"
            android:layout_height="37dp"
            android:layout_marginTop="8dp"
            android:text="@string/campusMapButtonText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/thirdFloorButton" />

        <Button
            android:id="@+id/aboutButton"
            android:layout_width="149dp"
            android:layout_height="37dp"
            android:layout_marginTop="8dp"
            android:text="@string/aboutButtonText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/campusMapButton" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>
